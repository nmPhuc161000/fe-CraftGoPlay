{
  "version": 2,
  "buildCommand": "git lfs install && git lfs fetch --all && git lfs checkout && npm run build",
  "outputDirectory": "dist",

  "rewrites": [
    {
      "source": "/CraftGoPlayGame/Build/:path*",
      "destination": "/CraftGoPlayGame/Build/:path*"
    },
    {
      "source": "/CraftGoPlayGame/:path*",
      "destination": "/CraftGoPlayGame/:path*"
    },
    { "source": "/:path((?!CraftGoPlayGame/).*)", "destination": "/index.html" }
  ],

  "headers": [
    {
      "source": "/CraftGoPlayGame/Build/(.*)\\.wasm",
      "headers": [{ "key": "Content-Type", "value": "application/wasm" }]
    },
    {
      "source": "/CraftGoPlayGame/Build/(.*)\\.data",
      "headers": [
        { "key": "Content-Type", "value": "application/octet-stream" }
      ]
    },
    {
      "source": "/CraftGoPlayGame/Build/(.*)\\.js",
      "headers": [{ "key": "Content-Type", "value": "application/javascript" }]
    }
  ],

  "regions": ["sin1"]
}
